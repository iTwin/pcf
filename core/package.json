    "@bentley/telemetry-client": "3.0.0-dev.127",
    "@itwin/core-backend": "3.0.0-dev.127",
    "@itwin/core-bentley": "3.0.0-dev.127",
    "@itwin/core-common": "3.0.0-dev.127",
    "@itwin/core-electron": "3.0.0-dev.127",
    "@itwin/core-geometry": "3.0.0-dev.127",
    "@itwin/ecschema-editing": "3.0.0-dev.127",
    "@itwin/ecschema-locaters": "3.0.0-dev.127",
    "@itwin/ecschema-metadata": "3.0.0-dev.127",
    "@itwin/browser-authorization": "latest",
    "@itwin/electron-authorization": "latest",
    "@itwin/service-authorization": "latest",
    "sqlite": "^4.0.12",
    "sqlite3": "^5.0.0",
    "xlsx": "^0.16.9",
    "xmldom": "^0.5.0"
  },
  "devDependencies": {
    "@bentley/aec-units-schema": "1.0.3",
    "@bentley/building-spatial-schema": "1.0.0",
