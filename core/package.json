    "@itwin/build-tools": "3.0.0-dev.127",
    "@itwin/oidc-signin-tool": "^3.0.0",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "10.14.1",
    "@types/object-hash": "^1.3.3",
    "@types/sqlite3": "^3.1.6",
    "@types/xmldom": "^0.1.30",
    "babel-cli": "^6.18.0",
    "chai": "^4.2.0",
    "mocha": "^8.3.2",
    "rimraf": "^2.7.1",
    "ts-node": "^10.4.0",
    "tslint": "^5.20.1",
    "typescript": "~4.3.0"
  }
