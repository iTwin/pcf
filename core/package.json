{
  "name": "@itwin/pcf",
  "version": "0.0.1",
  "description": "iTwin Parametric Connector Framework",
  "main": "lib/pcf.js",
  "typings": "lib/pcf",
  "license": "MIT",
  "scripts": {
    "build": "tsc && npm run copyFiles",
    "clean": "rimraf lib",
    "lint": "tslint --project .",
    "test": "npm run test:unit",
    "test:unit": "mocha --opts ./src/test/unit/mocha.opts \"./src/test/unit/**/*.test.ts*\"",
    "test:integration": "mocha --opts ./src/test/unit/mocha.opts \"./src/test/integration/**/*.test.ts*\"",
    "copyFiles": "npx babel src --out-dir lib --copy-files",
    "deploy": "git push && npm run clean && npm run build && npm publish",
    "docs": "betools docs"
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel"
  ],
  "peerDependencies": {
    "@bentley/bentleyjs-core": "^2.16.0",
    "@bentley/ecschema-metadata": "^2.16.0",
    "@bentley/imodeljs-backend": "^2.16.0",
    "@bentley/imodeljs-common": "^2.16.0"
  },
  "dependencies": {
    "@bentley/backend-itwin-client": "^2.16.0",
    "@bentley/bentleyjs-core": "^2.16.0",
    "@bentley/ecschema-metadata": "^2.16.0",
    "@bentley/electron-manager": "^2.16.0",
    "@bentley/geometry-core": "^2.16.0",
    "@bentley/imodelhub-client": "^2.16.0",
    "@bentley/imodeljs-backend": "^2.16.0",
    "@bentley/imodeljs-common": "^2.16.0",
    "@bentley/itwin-client": "^2.16.0",
    "@bentley/presentation-common": "^2.16.0",
    "@bentley/rbac-client": "^2.16.0",
    "@bentley/telemetry-client": "^2.16.0",
    "@types/sqlite3": "^3.1.6",
    "@types/xmldom": "^0.1.30",
    "dotenv": "^8.2.0",
    "ignore-styles": "^5.0.1",
    "sqlite": "^4.0.12",
    "sqlite3": "^5.0.0",
    "xlsx": "^0.16.9",
    "xmldom": "^0.5.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@bentley/build-tools": "^2.16.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.17.28",
    "@types/object-hash": "^1.3.3",
    "babel-cli": "^6.18.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "tslint": "^5.20.1",
    "typedoc": "^0.20.36",
    "typescript": "~4.1.0"
  },
  "eslintConfig": {
    "plugins": [
      "@bentley"
    ],
    "extends": "plugin:@bentley/imodeljs-recommended"
  }
}
