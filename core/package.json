{
  "name": "@itwin/pcf",
  "version": "0.1.2",
  "description": "Define your digital twin as code with iTwin PCF (Parametric Connector Framework).",
  "main": "lib/pcf.js",
  "typings": "lib/pcf",
  "license": "MIT",
  "keywords": [
    "Bentley",
    "BIM",
    "iModel"
  ],
  "engines": {
    "node": ">=12.17.0 <15.0",
    "npm": ">=6.0.0 <7.0.0"
  },
  "homepage": "https://github.com/itwin/pcf",
  "repository": {
    "type": "git",
    "url": "https://github.com/itwin/pcf"
  },
  "scripts": {
    "build": "tsc && npm run copyFiles",
    "clean": "rimraf lib",
    "lint": "tslint --project .",
    "test": "npm run test:unit",
    "test:unit": "mocha lib/test/unit --timeout 60000",
    "test:integration": "mocha lib/test/integration --timeout 60000",
    "copyFiles": "babel src --out-dir lib --copy-files",
    "deploy": "git push && npm run clean && npm run build && npm publish",
    "docs": "betools docs",
    "test-connector": "node lib/test/JSONConnector/App.js"
  },
  "dependencies": {
    "@bentley/imodelhub-client": "3.0.0-dev.127",
